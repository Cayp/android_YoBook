<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/chatItem"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/chat_item_selector">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spacecolor"/>
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/wra_chatHeadIcon"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:src="@mipmap/ic_launcher"
    tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/wra_chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wra_chatHeadIcon"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/textcolor3"
        tools:text="cayp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />
    <TextView
        android:id="@+id/chat_item_content"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/wra_chatHeadIcon"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textColor="@color/textcolor2"
        tools:text="很高兴认识你"
        tools:ignore="RtlHardcoded" />
    <RelativeLayout
        android:id="@+id/redCircle"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape"
        tools:ignore="RtlHardcoded">
        <!--<TextView-->
            <!--android:id="@+id/message_count"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="16sp"-->
            <!--tools:text="2"/>-->
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spacecolor"/>
</RelativeLayout>