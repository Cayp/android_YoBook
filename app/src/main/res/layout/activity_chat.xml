<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundchat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:windowSoftInputMode="stateVisible|adjustResize">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chatToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetStart="0dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    tools:ignore="RtlHardcoded">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/chat_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:civ_border_width="1dp"
    app:civ_border_color="@color/spacecolor"
    android:src="@mipmap/ic_launcher"
    tools:ignore="RtlHardcoded" />
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/to_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/textcolor3"
        android:text="cayp"
        tools:ignore="HardcodedText,RelativeOverlap" />
</LinearLayout>
    <ImageView
        android:id="@+id/moreicon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/moreicon"
        tools:ignore="ContentDescription,RtlHardcoded" />
</android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/spacecolor"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true">

    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/spacecolor"/>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_message"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:maxHeight="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/inputwrapper"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:hint="请输入消息"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/btn_send"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:background="@drawable/chat_right"
            android:hint="发送"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </LinearLayout>

</LinearLayout>