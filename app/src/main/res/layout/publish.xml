<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/publishwrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/bottomwindow"
        android:layout_centerHorizontal="true">
    <ImageView
    android:id="@+id/sendbokbutn"
    android:layout_width="@dimen/publishwidth"
    android:layout_height="@dimen/publishheight"
    android:src="@drawable/sendbokbutton"
    android:clickable="true"
    tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/sharebutton"
        android:layout_width="@dimen/publishwidth"
        android:layout_height="@dimen/publishheight"
        android:src="@drawable/sharebutton"
        android:layout_toRightOf="@+id/sendbokbutn"
        android:layout_marginLeft="25dp"
        android:clickable="true"
        tools:ignore="ContentDescription,RtlHardcoded" />
    <ImageView
        android:id="@+id/writebutton"
        android:layout_width="@dimen/publishwidth"
        android:layout_height="@dimen/publishheight"
        android:src="@drawable/writebutton"
        android:layout_toRightOf="@+id/sharebutton"
        android:layout_marginLeft="25dp"
        android:clickable="true"
        tools:ignore="ContentDescription,RtlHardcoded" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/bottomwindow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorwhite"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/cancelicon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:src="@drawable/cancelicon"
            android:clickable="true"
            tools:ignore="ContentDescription" />
    </FrameLayout>
</RelativeLayout>