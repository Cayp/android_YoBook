<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:cardCornerRadius="2dp"
    android:orientation="vertical"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        tools:ignore="ContentDescription,RtlHardcoded" />
        <TextView
            android:id="@+id/booknameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书名:"
            android:textSize="17sp"
            android:textColor="@color/textcolor3"
            android:layout_toRightOf="@id/bookCover"
            android:layout_marginLeft="20dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/bokNoteCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="笔记数量:"
            android:textColor="@color/textcolor3"
            android:layout_toRightOf="@id/bookCover"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="18sp"
            android:layout_toRightOf="@id/booknameText"
            android:layout_marginLeft="15dp"
            android:paddingRight="10dp"
            tools:text="hahahaha"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView
            android:id="@+id/boknameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor2"
            android:textSize="18sp"
            android:layout_toRightOf="@id/bokNoteCountText"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            tools:text="hahahaha"
            tools:ignore="RtlHardcoded"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>